<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Icon/Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile"
            app:tint="@color/quiet_space_primary"
            android:layout_marginBottom="24dp"
            android:contentDescription="Welcome icon" />

        <!-- Shuffle Text Animation -->
        <ca.gbc.comp3074.uiprototype.ui.animation.ShuffleTextView
            android:id="@+id/shuffleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/quiet_space_text_primary"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/welcomeSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find your perfect quiet space"
            android:textSize="16sp"
            android:textColor="@color/quiet_space_text_secondary"
            android:gravity="center"
            android:alpha="0"
            android:layout_marginBottom="24dp" />

        <!-- User Name -->
        <TextView
            android:id="@+id/welcomeUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back, User!"
            android:textSize="18sp"
            android:textColor="@color/quiet_space_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:alpha="0" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
