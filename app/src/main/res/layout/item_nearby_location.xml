<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardLocation"
    android:layout_width="180dp"
    android:layout_height="120dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/quiet_space_surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Location Name -->
        <TextView
            android:id="@+id/tvLocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Starbucks Coffee"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/quiet_space_text_primary"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Location Type -->
        <TextView
            android:id="@+id/tvLocationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cafe"
            android:textSize="12sp"
            android:textColor="@color/quiet_space_text_secondary"
            android:layout_marginTop="4dp" />

        <!-- Distance and Rating Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <!-- Distance -->
            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0.5 km"
                android:textSize="11sp"
                android:textColor="@color/quiet_space_text_secondary"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@drawable/ic_location"
                app:drawableTint="@color/quiet_space_text_secondary" />

            <!-- Rating -->
            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 4.5"
                android:textSize="11sp"
                android:textColor="@color/quiet_space_text_secondary" />
        </LinearLayout>

        <!-- Arrow Icon -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="end|bottom"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/quiet_space_primary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
