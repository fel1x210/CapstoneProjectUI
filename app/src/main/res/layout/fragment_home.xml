<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="20dp"
        android:elevation="4dp"
        android:alpha="0"
        android:translationY="-30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/welcome_headline"
                android:textColor="@color/quiet_space_text_primary"
                android:textSize="24sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonProfile"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/quiet_space_primary"
                app:icon="@drawable/ic_profile"
                app:iconTint="@color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#F8F8F8"
            android:paddingStart="16dp"
            android:paddingEnd="10dp"
            android:paddingVertical="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            android:alpha="0"
            android:translationY="-20dp">

            <EditText
                android:id="@+id/editSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Find places, tags..."
                android:inputType="text"
                android:textColor="@color/quiet_space_text_primary"
                android:textSize="16sp"
                android:padding="0dp" />

            <TextView
                android:id="@+id/iconSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”"
                android:textSize="20sp"
                android:layout_marginStart="10dp" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingVertical="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="10dp"
        android:overScrollMode="never"
        android:alpha="0"
        android:translationY="20dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_active"
                android:text="âš¡ Free Wi-Fi"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_inactive"
                android:text="ðŸ”Œ Outlets"
                android:textColor="@color/quiet_space_text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_inactive"
                android:text="ðŸ“š Very Quiet Libraries"
                android:textColor="@color/quiet_space_text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_chip_inactive"
                android:text="ðŸ“± Tech"
                android:textColor="@color/quiet_space_text_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/mapCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:alpha="0"
        android:translationY="20dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/filterScroll"
        app:layout_constraintBottom_toTopOf="@id/bottomCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8E8E8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ºï¸"
                    android:textSize="56sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interactive Map"
                    android:textColor="@color/quiet_space_text_secondary"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <TextView
                android:id="@+id/locationPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:translationY="-40dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddSpot"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:text="Add a Spot"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/white"
                android:textColor="@color/quiet_space_primary" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:alpha="0"
        android:translationY="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="The Urban Reader CafÃ©"
                    android:textColor="@color/quiet_space_text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.7"
                        android:textColor="@color/quiet_space_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(362 reviews)"
                        android:textColor="@color/quiet_space_text_secondary"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_chip_inactive"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="ðŸ”‡ Noise: Quiet"
                    android:textColor="@color/quiet_space_text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_chip_inactive"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="ðŸŸ¡ Some seats"
                    android:textColor="@color/quiet_space_text_secondary"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_inactive"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="6dp"
                    android:text="âš¡ Fast"
                    android:textColor="@color/quiet_space_text_secondary"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last visited: 10 hours ago by 5 users"
                android:textColor="@color/quiet_space_text_muted"
                android:textSize="14sp"
                android:layout_marginBottom="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonCheckIn"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Check-in"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="@color/quiet_space_primary"
                    android:textColor="@color/white"
                    android:paddingVertical="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonFavorite"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Add to Favorites â™¡"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/quiet_space_primary"
                    app:strokeWidth="1dp"
                    android:textColor="@color/quiet_space_primary"
                    android:paddingVertical="12dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
