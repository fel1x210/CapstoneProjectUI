<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quiet_space_background"
    tools:context=".ui.checkin.CheckInActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/quiet_space_surface"
            app:title="Check In"
            app:titleTextColor="@color/quiet_space_text_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/quiet_space_text_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/textPlaceName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place Name"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm your visit"
                        android:textSize="14sp"
                        android:textColor="@color/quiet_space_text_secondary"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="24dp" />

                    <!-- Question 1: How quiet is it? -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How quiet is it right now?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNoisy"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Noisy ðŸ”Š"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnModerate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Moderate ðŸ”‰"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginHorizontal="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnQuiet"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Very Quiet ðŸ”‡"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginStart="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>

                    <!-- Question 2: How busy is it? -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How busy is it?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEmpty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Empty ðŸ‘¤"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSteady"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Steady ðŸ‘¥"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginHorizontal="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnFull"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Full ðŸ‘ª"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginStart="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>

                    <!-- Question 3: Internet quality? -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Internet quality?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGoodWifi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Good Wifi ðŸ“¶"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPoorWifi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="No/Poor Wifi"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginStart="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>

                    <!-- Question 4: Are there outlets? -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are there outlets?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="24dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPlentyOutlets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Plenty"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginEnd="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnScarceOutlets"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Scarce"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            app:strokeColor="@color/quiet_space_border"
                            android:layout_marginStart="4dp"
                            app:cornerRadius="8dp"
                            android:padding="0dp"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>

                    <!-- Note Input -->
                    <EditText
                        android:id="@+id/inputNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Add a note (optional)"
                        android:background="@drawable/bg_outlined_input"
                        android:minHeight="48dp"
                        android:gravity="top|start"
                        android:layout_marginBottom="24dp" />

                    <!-- Confirm Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirmCheckIn"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Confirm Check In"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/quiet_space_primary"
                        app:cornerRadius="8dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>