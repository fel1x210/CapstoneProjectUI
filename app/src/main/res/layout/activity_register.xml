<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3F0"
    android:padding="24dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:elevation="8dp"
            android:alpha="0"
            android:translationY="24dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp">

                <!-- Logo and Header -->
                <LinearLayout
                    android:id="@+id/registerHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <!-- Logo Icon -->
                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/logo_circle_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QuietSpace"
                        android:textColor="#333333"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Find Your Serenity"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />
                </LinearLayout>

                <!-- Register Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="32dp"
                    android:text="Register"
                    android:textColor="#333333"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />

                <!-- Register Form -->
                <LinearLayout
                    android:id="@+id/registerForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:alpha="0"
                    android:translationY="24dp">

                    <!-- Full Name Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Full Name"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F8F8F8"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="#999999"
                        app:startIconDrawable="@drawable/ic_person"
                        app:startIconTint="#999999">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextFullName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:paddingVertical="18dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Password"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F8F8F8"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="#999999"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#999999"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:paddingVertical="18dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Confirm Password Input -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:hint="Confirm Password"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        app:boxBackgroundColor="#F8F8F8"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="20dp"
                        app:boxCornerRadiusBottomStart="20dp"
                        app:boxCornerRadiusTopEnd="20dp"
                        app:boxCornerRadiusTopStart="20dp"
                        app:boxStrokeColor="#E0E0E0"
                        app:boxStrokeWidth="0dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="#999999"
                        app:startIconDrawable="@drawable/ic_lock"
                        app:startIconTint="#999999"
                        app:endIconMode="password_toggle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/editTextConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:paddingVertical="18dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textColor="#333333"
                            android:textColorHint="#999999"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Terms and Privacy Checkbox -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkboxTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:buttonTint="@color/quiet_space_primary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I agree for Terms &amp; Privacy Policy"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>

                    <!-- Register Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonRegister"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="REGISTER"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:paddingVertical="18dp"
                        android:backgroundTint="@color/quiet_space_primary"
                        app:cornerRadius="20dp" />
                </LinearLayout>

                <!-- Footer Text -->
                <TextView
                    android:id="@+id/registerFooter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:alpha="0"
                    android:text="Already have you account? Login"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/textViewLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Login"
                    android:textColor="@color/quiet_space_primary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
