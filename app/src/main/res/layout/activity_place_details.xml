<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quiet_space_background"
    tools:context=".ui.details.PlaceDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/quiet_space_primary"
            android:elevation="4dp"
            app:title="Place Details"
            app:titleTextColor="@android:color/white"
            app:navigationIconTint="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Place Image Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/placeImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_place"
                    android:background="@color/quiet_space_map_placeholder"
                    android:contentDescription="Place image" />

                <!-- Overlay with basic info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gradient_overlay"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/placeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Place Name"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/placeType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Café"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/quiet_space_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/placeRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⭐ 4.7"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/quiet_space_text_primary" />

                        <TextView
                            android:id="@+id/placeReviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(362 reviews)"
                            android:textSize="14sp"
                            android:textColor="@color/quiet_space_text_secondary"
                            android:layout_marginStart="8dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/placeDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.2 km away"
                            android:textSize="14sp"
                            android:textColor="@color/quiet_space_text_secondary" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/placeAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Queen St W, Toronto, ON"
                        android:textSize="14sp"
                        android:textColor="@color/quiet_space_text_secondary"
                        android:layout_marginTop="8dp"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/placeHours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Open now"
                            android:textSize="14sp"
                            android:textColor="@color/quiet_space_primary"
                            android:textStyle="bold"
                            android:drawableStart="@drawable/ic_schedule"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical" />

                        <TextView
                            android:id="@+id/placePhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(416) 555-0123"
                            android:textSize="14sp"
                            android:textColor="@color/quiet_space_text_secondary"
                            android:layout_marginStart="16dp"
                            android:drawableStart="@drawable/ic_phone"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quiet Score Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/quietScoreCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/quiet_space_primary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Quiet Score"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quietScoreValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.2"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/5.0"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:layout_marginStart="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Description Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/quiet_space_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About this place"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/quiet_space_text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/placeDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A cozy café perfect for reading and studying with excellent coffee and quiet atmosphere."
                        android:textSize="14sp"
                        android:textColor="@color/quiet_space_text_secondary"
                        android:lineSpacingMultiplier="1.2" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tags -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/quiet_space_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What makes it quiet"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/quiet_space_text_primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/tagContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Reviews Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/quiet_space_surface">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Reviews"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/quiet_space_text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/placeReviewsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reviews will be loaded..."
                        android:textSize="14sp"
                        android:textColor="@color/quiet_space_text_secondary"
                        android:lineSpacingMultiplier="1.2"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/callButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Call"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/quiet_space_primary"
                    app:icon="@drawable/ic_phone"
                    app:iconTint="@android:color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/directionsButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Directions"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/quiet_space_primary"
                    app:icon="@drawable/ic_directions"
                    app:iconTint="@android:color/white" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Check In"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/quiet_space_primary"
                app:icon="@drawable/ic_check"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/favoriteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Favorites"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/quiet_space_primary"
                android:textColor="@color/quiet_space_primary"
                app:icon="@drawable/ic_favorite_border"
                app:iconTint="@color/quiet_space_primary" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
