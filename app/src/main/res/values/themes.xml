<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme with performance optimizations -->
    <style name="Base.Theme.UIPrototype" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/quiet_space_primary</item>
        <item name="colorPrimaryVariant">@color/quiet_space_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/quiet_space_accent</item>
        <item name="colorSecondaryVariant">@color/quiet_space_accent_secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- UI Colors -->
        <item name="android:windowBackground">@color/quiet_space_background</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/quiet_space_surface_variant</item>
        
        <!-- Smooth activity transitions -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
        
        <!-- Faster animations -->
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
        
        <!-- Hardware acceleration -->
        <item name="android:hardwareAccelerated">true</item>
    </style>

    <style name="Theme.UIPrototype" parent="Base.Theme.UIPrototype" />
    
    <!-- Window animation style for smooth transitions -->
    <style name="WindowAnimationTransition">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="Theme.UIPrototype.Fullscreen" parent="Theme.UIPrototype">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Theme.UIPrototype.Translucent" parent="Theme.UIPrototype">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="BottomNavTextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/quiet_space_primary_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/quiet_space_text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- New Card Style -->
    <style name="QuietSpaceCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/quiet_space_surface</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.App.BottomNavigationView.ActiveIndicator</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@color/quiet_space_primary_light</item>
        <item name="colorOnSecondaryContainer">@color/quiet_space_primary_dark</item>
        <item name="colorOnSurfaceVariant">@color/quiet_space_text_secondary</item>
    </style>

    <style name="Widget.App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/quiet_space_primary_light</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>